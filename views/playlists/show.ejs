<%- include('../partials/header') %>

<section id="show-page">
    <div>Playlist Name: </div> <div><%= playlists.playlistName %></div>
    <div>Genre: </div>
    <div><%= playlists.genre %></div>
    <div>Description: </div>
    <div><%= playlists.playlistDescription %></div>
    
    <div>
        <ul>
        <%= playlists.songId.map(s => `${s.songName} ${s.artist} ${s.songDescription}`) %>
        </ul>
    </div> 
    
</section>

<br> 

<form id="update-form" action="songs" method="PUT">
<label>Add New Song to Playlist?</label>
<select name="addToPlaylist">
    <% songs.forEach(function(s) { %>
        <option value="<%= s._id%>"><%= s.songName %></option>
    <% }); %>
    <input type="submit" value="Add Song to Playlist">
</select>
</form>

<br>

<br> 

<form id="delete-form" action="/playlists/" method="DELETE">
    <button type="submit"> Delete song </button>
</form>



