<%- include('../partials/header') %>

<section id="show-page">
    <div>Playlist Name: </div>
    <div><%= playlist.playlistName %></div>
    <div>Genre: </div>
    <div><%= playlist.genre %></div>
    <div>Description: </div>
    <div><%= playlist.playlistDescription %></div>
    
    <div>
        <ul>
        <%- playlist.songId.map(s => `<li> ${s.songName} ${s.artist} ${s.songDescription}</li>`).join(<br>) %>
        </ul>
    </div> 
    
</section>

<br> 

<form id="add-song-to-playlist" action="/playlists/<%= playlist._id %>/songs" method="POST">
  <select name="songId">
    <% songs.forEach(function(s) { %>
      <option value="<%= s._id %>"><%= s.songName %></option>
    <% }); %>
  </select>
  <button type="submit">Add to Playlist</button>
</form>

<%- include('../partials/footer') %>